[alias]
    st = status
    sm = status -sb
    bl = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
    co = checkout
    cob = checkout -b
    com = checkout -m
    log-nice = log --graph --decorate --pretty=oneline --abbrev-commit
    lg = log --color --graph --pretty=format:'%C(yellow)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    mergeff = merge --ff-only
    rv = remote --verbose
    d = diff
    dc = diff --cached
    poh = push origin HEAD
    cloner = clone --recursive
[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[color]
    ui = true
    interative = true
    diff = true
[push]
	default = simple
[core]
    autocrlf = input
    editor = nvim
[user]
    email = "sr.jilarious@fastmail.net"
    name = "Jeff DeWall"
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
